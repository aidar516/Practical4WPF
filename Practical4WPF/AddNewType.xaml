<Window x:Class="Practical4WPF.AddNewType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Practical4WPF"
        mc:Ignorable="d"
        Title="AddNewType" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" Grid.Row="1" Content="OK" FontSize="20" Click="OkBtn_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Content="CLOSE" FontSize="20" Click="CloseBtn_Click"/>
        <TextBox x:Name="newType" TextWrapping="Wrap" FontSize="30" Text="Новый тип записи" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
